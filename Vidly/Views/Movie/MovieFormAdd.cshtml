@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = Model.Title; 
}
 
<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.strMovieName, "Customer Name")
        @Html.TextBoxFor(m => m.Movie.strMovieName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate, "Release Date")
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId, "Genre Lists")
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock, "Number In Stock")
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">SAVE</button>
    <a href='@Url.Action("Index","Movie")' class="btn btn-primary">BACK</a>
}